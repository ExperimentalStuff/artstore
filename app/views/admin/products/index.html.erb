<h3> admin/product/index.html.erb </h3>

<ul>
	<% @products.each do |product| %>

		<li> <%= link_to(product.title, admin_product_path(product)) %></li>
		<%= link_to("edit", edit_admin_product_path(product)) %>
		<%= link_to("delete", admin_product_path(product), method: :delete, data: { confirm: "Are you sure?"}) %></li>
	<% end %>
	
</ul>

<h3> <%= link_to("new product", new_admin_product_path) %></h3>